{
  "manifest_version": 3,
  "name": "TiHC",
  "version": "1.1",
  "description": "采集 Grafana 和 TiDB Clinic 页面的认证信息",
  "permissions": [
    "storage",
    "activeTab",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
